# IT Architects Suite - Production Dockerfile with Node.js v22
# Multi-stage build for optimized production deployment

# Stage 1: Build stage for backend dependencies
FROM node:22-alpine AS backend-builder

# Set working directory for backend
WORKDIR /app/backend

# Install security updates and essential packages
RUN apk update && apk upgrade && apk add --no-cache \
    python3 \
    make \
    g++ \
    && rm -rf /var/cache/apk/*

# Copy backend package files
COPY backend/package*.json ./

# Install backend dependencies with security audit
RUN npm ci --only=production && \
    npm audit fix --audit-level high && \
    npm cache clean --force

# Stage 2: Production runtime
FROM node:22-alpine AS production

# Create non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodeuser -u 1001

# Install nginx and security updates
RUN apk update && apk upgrade && apk add --no-cache \
    nginx \
    supervisor \
    curl \
    && rm -rf /var/cache/apk/*

# Set working directory
WORKDIR /app

# Copy backend dependencies from builder stage
COPY --from=backend-builder /app/backend/node_modules ./backend/node_modules

# Copy application files
COPY --chown=nodeuser:nodejs . .

# Copy backend files
COPY --chown=nodeuser:nodejs backend/ ./backend/

# Create necessary directories
RUN mkdir -p /var/log/nginx /var/log/supervisor /app/uploads /app/backend/logs && \
    chown -R nodeuser:nodejs /app /var/log/nginx /var/log/supervisor

# Configure Nginx for security and performance
COPY docker/nginx-v22.conf /etc/nginx/nginx.conf

# Configure Supervisor for process management
COPY docker/supervisord-v22.conf /etc/supervisor/conf.d/supervisord.conf

# Expose ports
EXPOSE 3000 3001

# Health check with improved reliability
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:3000/ && curl -f http://localhost:3001/api/health || exit 1

# Switch to non-root user
USER nodeuser

# Start services using supervisor
CMD [\"/usr/bin/supervisord\", \"-c\", \"/etc/supervisor/conf.d/supervisord.conf\"]