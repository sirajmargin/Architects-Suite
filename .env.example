# IT Architects Suite Environment Configuration
# Copy this file to .env and update values accordingly

# Application Configuration
NODE_ENV=production
APP_NAME=IT Architects Suite
APP_VERSION=1.0.0
APP_PORT=3000

# API Configuration
API_BASE_URL=http://localhost:3001
API_TIMEOUT=30000
API_RATE_LIMIT=100

# AI Service Configuration
AI_SERVICE_URL=http://localhost:5000
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_MODEL_PATH=/app/models
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# Database Configuration
DATABASE_URL=postgresql://architects_user:secure_password@localhost:5432/architects_db
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=5000

# MongoDB Configuration
MONGODB_URL=mongodb://admin:password@localhost:27017/architects_diagrams
MONGODB_OPTIONS=?authSource=admin

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Authentication Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h
SESSION_SECRET=your_session_secret_change_this_in_production

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Security Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/app/uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=architects-suite-files

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=info
LOG_FORMAT=json

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@architects-suite.com

# Notification Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url
TEAMS_WEBHOOK_URL=your_teams_webhook_url

# Feature Flags
FEATURE_AI_ENABLED=true
FEATURE_COLLABORATION_ENABLED=true
FEATURE_EXPORT_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Performance Configuration
MAX_FILE_SIZE=10485760
MAX_CONCURRENT_GENERATIONS=5
CACHE_TTL=3600
REQUEST_TIMEOUT=30000

# Development Configuration (only for development environment)
DEBUG=false
HOT_RELOAD=false
MOCK_AI_RESPONSES=false
SKIP_AUTH=false