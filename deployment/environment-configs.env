# Environment-specific configurations

# Production Environment (.env.production)
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://architects-suite.com
DEPLOYMENT_TYPE=multi-tenant

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/architects_suite
POSTGRES_DB=architects_suite
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_PORT=5432

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-64-characters-long
ENCRYPTION_KEY=your-256-bit-encryption-key-in-hex-format-here-64-characters
NEXTAUTH_SECRET=your-nextauth-secret-here-minimum-32-characters-long
NEXTAUTH_URL=https://architects-suite.com

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379

# GitHub Integration
GITHUB_BOT_TOKEN=ghp_your-github-personal-access-token
GITHUB_WEBHOOK_SECRET=your-webhook-secret-for-security

# SAML SSO Configuration
SAML_ENTRY_POINT=https://your-idp.com/saml/sso
SAML_ISSUER=https://architects-suite.com
SAML_CERT="-----BEGIN CERTIFICATE-----\nYour certificate content here\n-----END CERTIFICATE-----"
SAML_PRIVATE_CERT="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"
SAML_SIGNATURE_ALGORITHM=sha256
SAML_DIGEST_ALGORITHM=sha256
SAML_VALIDATE_IN_RESPONSE_TO=true

# Notion Integration (Optional)
NOTION_TOKEN=secret_your-notion-integration-token

# Confluence Integration (Optional)
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net
CONFLUENCE_TOKEN=your-confluence-api-token

# Application Configuration
ALLOWED_ORIGINS=https://architects-suite.com,https://app.architects-suite.com
APP_PORT=3000

# Monitoring (Optional)
GRAFANA_PASSWORD=your-grafana-admin-password

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT=28800000  # 8 hours in milliseconds

# Feature Flags
ENABLE_MONITORING=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_AI_FEATURES=true
ENABLE_EXPORT_FEATURES=true
ENABLE_INTEGRATIONS=true

---

# Development Environment (.env.development)
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
DEPLOYMENT_TYPE=single-tenant

# Database Configuration (Development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/architects_suite_dev
POSTGRES_DB=architects_suite_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# Development Authentication
JWT_SECRET=development-jwt-secret-not-for-production-use-only
ENCRYPTION_KEY=development-encryption-key-64-char-hex-not-for-production
NEXTAUTH_SECRET=development-nextauth-secret-not-for-production

# Redis Configuration (Development)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_PORT=6379

# Development GitHub Integration
GITHUB_BOT_TOKEN=your-development-github-token
GITHUB_WEBHOOK_SECRET=development-webhook-secret

# Development SAML (Disabled)
SAML_ENTRY_POINT=
SAML_ISSUER=http://localhost:3000
SAML_CERT=
SAML_PRIVATE_CERT=

# Development Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
APP_PORT=3000

# Development Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Development Features
ENABLE_MONITORING=false
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_AI_FEATURES=true
ENABLE_EXPORT_FEATURES=true
ENABLE_INTEGRATIONS=true

---

# Single Tenant Environment (.env.single-tenant)
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-company.architects-suite.com
DEPLOYMENT_TYPE=single-tenant

# Tenant-specific configuration
TENANT_ID=your-company
TENANT_NAME=Your Company Name
TENANT_DOMAIN=your-company.architects-suite.com

# Single tenant database
DATABASE_URL=postgresql://user:password@localhost:5432/architects_suite_your_company

# Single tenant authentication (usually SAML)
SAML_ENTRY_POINT=https://your-company-idp.com/saml/sso
SAML_ISSUER=https://your-company.architects-suite.com

# Restricted origins for single tenant
ALLOWED_ORIGINS=https://your-company.architects-suite.com

# Single tenant features
ENABLE_USER_REGISTRATION=false  # Usually disabled for single tenant
REQUIRE_SAML_AUTH=true
ENABLE_MULTI_TENANCY=false

---

# Private Cloud Environment (.env.private-cloud)
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://architects.your-company.internal
DEPLOYMENT_TYPE=private-cloud

# Private cloud database
DATABASE_URL=postgresql://user:password@db.your-company.internal:5432/architects_suite

# Private cloud Redis
REDIS_URL=redis://cache.your-company.internal:6379

# Internal network configuration
ALLOWED_ORIGINS=https://architects.your-company.internal,https://*.your-company.internal

# Private cloud security
ENABLE_EXTERNAL_INTEGRATIONS=false  # May be disabled for security
REQUIRE_VPN_ACCESS=true
INTERNAL_NETWORK_ONLY=true

# Private cloud monitoring
ENABLE_MONITORING=true
MONITORING_ENDPOINT=https://monitoring.your-company.internal

# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30